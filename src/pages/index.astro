---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/Header.astro";
import Cover from "../components/Cover.astro";
import RecentWorks from "../components/RecentWorks.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/footer/Footer.astro";
---

<Layout>
	<main class="flex flex-col justify-center items-center leading-none">
		<section
			id="cover-section"
			class="min-h-screen w-full flex flex-col md:justify-start bg-cover bg-no-repeat bg-center bg-fixed px-4 md:px-0"
			style="background-image: url('public/background.svg')"
		>
			<Header />
			<Cover />
		</section>
		<RecentWorks />
		<Projects />
		<AboutMe />
		<Contact />
	</main>
	<Footer />
</Layout>
