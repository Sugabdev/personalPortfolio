---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
import Cover from '../components/Cover.astro'
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<main class="flex flex-col justify-center items-center leading-none">
		<section
			class="min-h-screen w-full flex flex-col justify-start bg-cover bg-no-repeat bg-center bg-fixed"
			style="background-image: url('public/background.svg')"
		>
			<Header />
			<Cover />
		</section>
		<section>
			<h1>Aqui va a ir alguna zona con fondo claro</h1>
		</section>
		<Contact/>
	</main>
	<Footer/>
</Layout>
