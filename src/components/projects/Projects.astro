---
import { Image } from "astro:assets";
import projectScreenshot from "../../assets/images/projects/project_example.jpg";
import wsToExcel from "../../assets/images/projects/wsToExcel.webp";
import HtmlIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import JavascriptIcon from "./icons/JavascriptIcon.astro";
import TypescriptIcon from "./icons/TypescriptIcon.astro";
import NextjsIcon from "./icons/NextjsIcon.astro";
import TailwindcssIcon from "./icons/TailwindcssIcon.astro";

const iconComponents = {
    Html: HtmlIcon,
    Css: CssIcon,
    Javascript: JavascriptIcon,
    Typescript: TypescriptIcon,
    Nextjs: NextjsIcon,
    Tailwindcss: TailwindcssIcon,
};

const projects = [
    {
        Screenshot: wsToExcel,
        Title: "Ws To Excel",
        Description:
            "Aplicación web desarrollada a petición de un cliente. Consiste en un frontend con autenticaciónde usuario, un dashboard para cargar archivos de texto y un backend que se encarga de procesar el archivo y subir los datos a una hoja de cálculo conectando con la API de google.",
        Tecnologies: ["Typescript", "Tailwindcss", "Nextjs"],
    },
    {
        Screenshot: projectScreenshot,
        Title: "Nombre del proyecto",
        Description:
            "Aquí va a ir una descripción que explica un poco sobre que trata el proyecto",
        Tecnologies: ["Html", "Css", "Javascript"],
    },
    {
        Screenshot: projectScreenshot,
        Title: "Nombre del proyecto",
        Description:
            "Aquí va a ir una descripción que explica un poco sobre que trata el proyecto",
        Tecnologies: ["Html", "Css", "Javascript"],
    },
    {
        Screenshot: projectScreenshot,
        Title: "Nombre del proyecto",
        Description:
            "Aquí va a ir una descripción que explica un poco sobre que trata el proyecto",
        Tecnologies: ["Html", "Css", "Javascript"],
    },
];
---

<section
    id="projects-section"
    class="w-full flex flex-col items-center gap-8 bg-cover bg-no-repeat bg-center bg-fixed text-white py-16 px-8 md:px-0"
    style="background-image: url('/background.svg')"
>
    <h1 class="text-6xl"><span class="text-4xl">📂</span> Proyectos</h1>
    <section class="grid grid-cols-1 md:grid-cols-2 gap-16">
        {
            projects.map(({ Screenshot, Title, Description, Tecnologies }) => (
                <article class="flex flex-col justify-between gap-4 max-w-80 rounded-md overflow-hidden">
                    <Image src={Screenshot} alt="Project screenshot" />
                    <h2 class="text-3xl text-center md:text-left">{Title}</h2>
                    <p class="text-xl leading-6 text-center md:text-left">
                        {Description}
                    </p>
                    <div class="w-full flex flex-row justify-center md:justify-start gap-4">
                        {Tecnologies.map((tecnology) => {
                            const IconComponent = iconComponents[tecnology];
                            return (
                                IconComponent && (
                                    <IconComponent class="size-12" />
                                )
                            );
                        })}
                    </div>
                    <button
                        type="button"
                        class="w-full text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-xl px-5 py-2.5 text-center"
                    >
                        ¡Más sobre este proyecto!
                    </button>
                </article>
            ))
        }
    </section>
</section>
